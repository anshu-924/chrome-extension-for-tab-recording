{
  "manifest_version": 3,
  "name": "Google Meet Recorder",
  "version": "1.0.0",
  "description": "Record Google Meet sessions with tab and screen capture support",
  
  "permissions": [
    "tabs",
    "storage",
    "offscreen",
    "tabCapture",
    "activeTab",
    "scripting",
    "notifications"
  ],
  
  "host_permissions": [
    "*://meet.google.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://meet.google.com/*"],
      "js": ["content/meet-injector.js"],
      "css": ["content/content.css"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Google Meet Recorder",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "preview.html",
        "microphone-permission.html",
        "microphone-permission.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}